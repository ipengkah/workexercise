<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ipeng.workexercise.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personalize your Schoters "
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#313131"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="homepage"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#313131"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deskripsi_schoters"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <Button
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:id="@+id/bubble_buton"
        android:background="@drawable/bubble_button"
        android:text="S1/BACHELOR"
        android:textColor="#545454"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>

     <Button
         android:layout_width="match_parent"
         android:layout_marginLeft="10dp"
         android:textSize="14dp"
         android:background="@drawable/bubble_button"
         android:text="S2/Master"
         android:textColor="#545454"
         android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>
